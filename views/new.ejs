<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Tweet - Tweetify</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/styleCreate.css">
</head>
<body>
    <%- include('partials/flash') %>
    <div class="container">
        <header class="form-header">
            <a href="/tweets" class="back-btn"><i class="fas fa-arrow-left"></i></a>
            <h1><i class="fa-brands fa-twitter"></i> Compose Tweet</h1>
        </header>
        
        <form action="/tweets" method="post" class="post-form">
            <div class="form-group">
                <label for="content">What's happening?!</label>
                <textarea id="content" name="content" placeholder="Share your thoughts..." required></textarea>
                <span class="char-count"><span id="charCount">0</span>/280</span>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Post</button>
                <a href="/tweets" class="btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    
    <script>
        const textarea = document.getElementById('content');
        const charCount = document.getElementById('charCount');
        textarea.addEventListener('input', function() {
            charCount.textContent = this.value.length;
            if (this.value.length > 280) {
                this.value = this.value.substring(0, 280);
                charCount.textContent = 280;
            }
        });
    </script>
</body>
</html>